<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inf. Contacto"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="20dp"
        android:text="Nombre:"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="Lucho"
        android:layout_below="@+id/titulo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom"
        android:layout_marginTop="20dp"
        android:text="Correo:"/>

    <TextView
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="a@gmail.com"
        android:layout_below="@+id/nombre"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cor"
        android:layout_marginTop="20dp"
        android:text="Oficina"/>

    <TextView
        android:id="@+id/oficina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="XX999"
        android:layout_below="@+id/correo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/of"
        android:layout_marginTop="20dp"
        android:text="Telefono:"/>

    <TextView
        android:id="@+id/telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="999999999"
        android:layout_below="@+id/oficina"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/llamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tel"
        android:layout_marginTop="20dp"
        android:text="Llamar" />


    <Button
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/telefono"
        android:layout_marginTop="20dp"
        android:text="Mensaje" />
</RelativeLayout>
